<?xml version="1.0" encoding="UTF-8"?>
<template>
    <embed color="#ee281f">
        <title>Ошибка!</title>
        <fields>
            <field name="Время" inline="true">```{{.Timestamp}}```</field>
            <field name="Версия" inline="true">```{{.Version}}```</field>
            <field name="Описание" inline="false"> 
                ```{{.Message}}```
                {{if .Stack }} {{ .Stack }} {{ end }}
            </field>
        </fields>
    </embed>
</template>